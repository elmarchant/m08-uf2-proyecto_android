<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/startFragment">

    <fragment
        android:id="@+id/startFragment"
        android:name="com.local.marchant.app.ui.StartFragment"
        android:label="fragment_start"
        tools:layout="@layout/fragment_start" >
        <action
            android:id="@+id/fromStartToPlay"
            app:destination="@id/playFragment" />
        <action
            android:id="@+id/fromStartToScores"
            app:destination="@id/fromHighScoresToStart" />
    </fragment>
    <fragment
        android:id="@+id/playFragment"
        android:name="com.local.marchant.app.ui.PlayFragment"
        android:label="fragment_play"
        tools:layout="@layout/fragment_play" >
        <action
            android:id="@+id/fromPlayToStart"
            app:destination="@id/startFragment" />
    </fragment>
    <fragment
        android:id="@+id/fromHighScoresToStart"
        android:name="com.local.marchant.app.ui.MaxScoresFragment"
        android:label="fragment_max_scores"
        tools:layout="@layout/fragment_max_scores" >
        <action
            android:id="@+id/fromScoresToStart"
            app:destination="@id/startFragment" />
    </fragment>
</navigation>